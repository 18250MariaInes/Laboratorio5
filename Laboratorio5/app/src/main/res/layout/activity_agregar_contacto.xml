<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".agregarContacto">

    <TextView
            android:text="Agregar Contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextAgregar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="137dp" android:layout_marginStart="137dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="137dp"
            android:layout_marginRight="137dp"
            android:textSize="32sp"/>
    <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp"
            android:textSize="18dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNombre"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="108dp"
            android:layout_marginStart="108dp"
            app:layout_constraintTop_toBottomOf="@+id/nombre" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Teléfono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/telefono" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/editNombre"
            android:textSize="18dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/cellphone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="108dp"
            android:layout_marginStart="108dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/telefono"/>
    <TextView
            android:text="Correo electrónico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correo" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/cellphone"
            android:textSize="18dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/correo2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="108dp"
            android:layout_marginStart="108dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/correo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp"/>
    <Button
            android:text="Crear contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAgregar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
            app:layout_constraintHorizontal_bias="0.491"
            android:onClick="agregarContacto" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/correo2"/>
    <Button
            android:text="Regresar a contactos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regresoMenu" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="142dp" android:layout_marginRight="142dp"
            android:onClick="regresarmenu"
            app:layout_constraintHorizontal_bias="0.616" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonAgregar"/>
</android.support.constraint.ConstraintLayout>