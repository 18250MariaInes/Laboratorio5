<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".agregarContacto">

    <TextView
            android:text="Agregar Contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextAgregar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="137dp" android:layout_marginStart="137dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="137dp"
            android:layout_marginRight="137dp"
            android:textSize="32sp"/>
    <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/editNombre"/>
    <EditText
            android:layout_width="167dp"
            android:layout_height="53dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNombre"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/telefono" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="103dp" android:layout_marginRight="103dp"/>
    <TextView
            android:text="Teléfono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/telefono"
            android:textSize="18dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/cellphone" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="252dp" android:layout_marginRight="252dp"/>
    <EditText
            android:layout_width="173dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/cellphone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="103dp" android:layout_marginRight="103dp" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/correo"/>
    <TextView
            android:text="Correo electrónico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correo"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="200dp" android:layout_marginRight="200dp"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/correo2"/>
    <EditText
            android:layout_width="185dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/correo2"

            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonAgregar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="104dp" android:layout_marginRight="104dp"/>
    <Button
            android:text="Crear contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAgregar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
            app:layout_constraintHorizontal_bias="0.329"
            android:onClick="agregarContacto"
            app:layout_constraintBottom_toTopOf="@+id/regresoMenu"/>
    <Button
            android:text="Regresar a contactos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regresoMenu" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="142dp" android:layout_marginRight="142dp"
            android:onClick="regresarmenu"
            app:layout_constraintHorizontal_bias="0.473"
            android:layout_marginBottom="19dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>